function Library:MakeDraggable()
    local dragging, dragInput, dragStart, startPos
    
    self.TopBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = self.MainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            self.MainFrame.Position = UDim2.new(
                startPos.X.Scale, startPos.X.Offset + delta.X,
                startPos.Y.Scale, startPos.Y.Offset + delta.Y
            )
        end
    end)
end

function Library:CreateTab(config)
    local Tab = {}
    Tab.Name = config.Name or "Tab"
    Tab.Icon = config.Icon or "rbxassetid://6031360365"
    Tab.SubTabs = {}
    Tab.CurrentSubTab = nil
    
    local TabButton = Instance.new("TextButton")
    TabButton.Name = Tab.Name
    TabButton.Size = UDim2.new(1, 0, 0, 42)
    TabButton.BackgroundColor3 = Color3.fromRGB(25, 28, 32)
    TabButton.BorderSizePixel = 0
    TabButton.Text = ""
    TabButton.AutoButtonColor = false
    TabButton.Parent = self.TabContainer
    
    local TabCorner = Instance.new("UICorner")
    TabCorner.CornerRadius = UDim.new(0, 8)
    TabCorner.Parent = TabButton
    
    local TabIcon = Instance.new("ImageLabel")
    TabIcon.Size = UDim2.new(0, 20, 0, 20)
    TabIcon.Position = UDim2.new(0, 12, 0.5, -10)
    TabIcon.BackgroundTransparency = 1
    TabIcon.Image = Tab.Icon
    TabIcon.ImageColor3 = Color3.fromRGB(150, 150, 150)
    TabIcon.Parent = TabButton
    
    local TabLabel = Instance.new("TextLabel")
    TabLabel.Size = UDim2.new(1, -45, 1, 0)
    TabLabel.Position = UDim2.new(0, 40, 0, 0)
    TabLabel.BackgroundTransparency = 1
    TabLabel.Text = Tab.Name
    TabLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    TabLabel.TextSize = 13
    TabLabel.Font = Enum.Font.Gotham
    TabLabel.TextXAlignment = Enum.TextXAlignment.Left
    TabLabel.Parent = TabButton
    
    Tab.Button = TabButton
    Tab.Icon = TabIcon
    Tab.Label = TabLabel
    Tab.Library = self
    
    TabButton.MouseButton1Click:Connect(function()
        self:SelectTab(Tab)
    end)
    
    table.insert(self.Tabs, Tab)
    
    if #self.Tabs == 1 then
        self:SelectTab(Tab)
    end
    
    return Tab
end

function Library:SelectTab(tab)
    for _, t in pairs(self.Tabs) do
        t.Button.BackgroundColor3 = Color3.fromRGB(25, 28, 32)
        t.Icon.ImageColor3 = Color3.fromRGB(150, 150, 150)
        t.Label.TextColor3 = Color3.fromRGB(150, 150, 150)
    end
    
    tab.Button.BackgroundColor3 = Color3.fromRGB(100, 120, 255)
    tab.Icon.ImageColor3 = Color3.fromRGB(255, 255, 255)
    tab.Label.TextColor3 = Color3.fromRGB(255, 255, 255)
    
    for _, child in pairs(self.SubTabContainer:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    for _, subTab in pairs(tab.SubTabs) do
        subTab.Button.Parent = self.SubTabContainer
    end
    
    self.CurrentTab = tab
    
    if #tab.SubTabs > 0 then
        self:SelectSubTab(tab, tab.SubTabs[1])
    end
end


function Library:CreateSubTab(tab, config)
    local SubTab = {}
    SubTab.Name = config.Name or "SubTab"
    SubTab.Icon = config.Icon or "rbxassetid://6031360365"
    SubTab.Modules = {}
    
    local SubTabButton = Instance.new("TextButton")
    SubTabButton.Name = SubTab.Name
    SubTabButton.Size = UDim2.new(0, 120, 0, 35)
    SubTabButton.BackgroundColor3 = Color3.fromRGB(25, 28, 32)
    SubTabButton.BorderSizePixel = 0
    SubTabButton.Text = ""
    SubTabButton.AutoButtonColor = false
    
    local SubTabCorner = Instance.new("UICorner")
    SubTabCorner.CornerRadius = UDim.new(0, 8)
    SubTabCorner.Parent = SubTabButton
    
    local SubTabIcon = Instance.new("ImageLabel")
    SubTabIcon.Size = UDim2.new(0, 18, 0, 18)
    SubTabIcon.Position = UDim2.new(0, 10, 0.5, -9)
    SubTabIcon.BackgroundTransparency = 1
    SubTabIcon.Image = SubTab.Icon
    SubTabIcon.ImageColor3 = Color3.fromRGB(150, 150, 150)
    SubTabIcon.Parent = SubTabButton
    
    local SubTabLabel = Instance.new("TextLabel")
    SubTabLabel.Size = UDim2.new(1, -40, 1, 0)
    SubTabLabel.Position = UDim2.new(0, 35, 0, 0)
    SubTabLabel.BackgroundTransparency = 1
    SubTabLabel.Text = SubTab.Name
    SubTabLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    SubTabLabel.TextSize = 12
    SubTabLabel.Font = Enum.Font.Gotham
    SubTabLabel.TextXAlignment = Enum.TextXAlignment.Left
    SubTabLabel.Parent = SubTabButton
    
    SubTab.Button = SubTabButton
    SubTab.Icon = SubTabIcon
    SubTab.Label = SubTabLabel
    SubTab.Tab = tab
    
    SubTabButton.MouseButton1Click:Connect(function()
        tab.Library:SelectSubTab(tab, SubTab)
    end)
    
    table.insert(tab.SubTabs, SubTab)
    
    return SubTab
end


function Library:SelectSubTab(tab, subTab)
    for _, st in pairs(tab.SubTabs) do
        st.Button.BackgroundColor3 = Color3.fromRGB(25, 28, 32)
        st.Icon.ImageColor3 = Color3.fromRGB(150, 150, 150)
        st.Label.TextColor3 = Color3.fromRGB(150, 150, 150)
        
        for _, module in pairs(st.Modules) do
            module.Frame.Visible = false
        end
    end
    
    subTab.Button.BackgroundColor3 = Color3.fromRGB(80, 100, 220)
    subTab.Icon.ImageColor3 = Color3.fromRGB(255, 255, 255)
    subTab.Label.TextColor3 = Color3.fromRGB(255, 255, 255)
    
    for _, module in pairs(subTab.Modules) do
        module.Frame.Visible = true
    end
    
    tab.CurrentSubTab = subTab
end

